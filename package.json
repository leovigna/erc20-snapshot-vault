{
	"name": "@leovigna/solidity-starter",
	"version": "0.1.3",
	"private": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/leovigna/solidity-starter.git"
	},
	"homepage": "https://leovigna.github.io/solidity-starter",
	"copyright": "Copyright 2020 Leo Vigna",
	"license": "MIT",
	"scripts": {
		"clean": "npm-run-all -p clean:lib clean:abi clean:types",
		"clean:lib": "rimraf lib",
		"clean:abi": "rimraf src/abi/*.json src/abi/*.json",
		"clean:types": "rimraf src/types/ethers src/types/truffle src/types/web3",
		"test": "cross-env NODE_OPTIONS=--max-old-space-size=4096 mocha lib/test",
		"lint": "eslint src --ext=ts",
		"lint:fix": "eslint src --ext=ts --fix",
		"compile": "npm-run-all compile:truffle generate-types copy compile:tsc",
		"compile:truffle": "truffle compile",
		"copy": "npm-run-all -p copy:solidity copy:ethers copy:truffle copy:web3",
		"copy:solidity": "mkdir -p lib/solidity && cp -r src/solidity lib/",
		"copy:ethers": "mkdir -p lib/types/ethers && cp -r src/types/ethers/*.d.ts lib/types/ethers",
		"copy:truffle": "mkdir -p lib/types/truffle && cp -r src/types/truffle/*.d.ts lib/types/truffle",
		"copy:web3": "mkdir -p lib/types/web3 && cp -r src/types/web3/*.d.ts lib/types/web3",
		"pretest": "npm-run-all clean compile",
		"prepublishOnly": "npm run test",
		"generate-types": "npm-run-all -p generate-types:truffle generate-types:web3 generate-types:ethers",
		"generate-types:truffle": "typechain --target=truffle-v5 --outDir=src/types/truffle 'src/abi/*.json'",
		"generate-types:web3": "typechain --target=web3-v1 --outDir=src/types/web3 'src/abi/*.json'",
		"generate-types:ethers": "typechain --target=ethers-v5 --outDir=src/types/ethers 'src/abi/*.json'",
		"compile:tsc": "tsc",
		"ganache": "ganache-cli -l 8500000",
		"docs": "solidity-docgen -i src/solidity -o docs"
	},
	"devDependencies": {
		"@ethersproject/contracts": "^5.0.12",
		"@ethersproject/providers": "^5.0.24",
		"@truffle/contract": "^4.3.4",
		"@typechain/ethers-v5": "^5.0.0",
		"@typechain/hardhat": "^1.0.1",
		"@typechain/truffle-v5": "^4.0.1",
		"@typechain/web3-v1": "^2.0.2",
		"@types/chai": "^4.2.14",
		"@types/lodash": "^4.14.167",
		"@types/mocha": "^8.2.0",
		"@types/node": "^12.19.4",
		"@typescript-eslint/eslint-plugin": "^2.34.0",
		"@typescript-eslint/parser": "^2.34.0",
		"chai": "^4.2.0",
		"cross-env": "^7.0.3",
		"dotenv": "^8.2.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.15.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-prettier": "^3.1.4",
		"ethers": "^5.2.0",
		"ganache-cli": "^6.12.1",
		"ganache-core": "^2.13.1",
		"husky": "^4.3.0",
		"lint-staged": "^10.5.1",
		"lodash": "^4.17.20",
		"mocha": "^8.2.0",
		"npm-run-all": "^4.1.5",
		"peer-id": "^0.14.8",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.2",
		"solidity-docgen": "^0.5.11",
		"truffle": "^5.1.60",
		"truffle-assertions": "^0.9.2",
		"ts-node": "^8.10.2",
		"ts-node-dev": "^1.0.0",
		"typechain": "^4.0.3",
		"typescript": "~4.1.5",
		"web3": "^1.3.1",
		"web3-core": "^1.3.1",
		"web3-eth-contract": "^1.3.1"
	},
	"files": [
		"lib/solidity/**/!(Test*)",
		"lib/abi",
		"lib/ethers",
		"lib/truffle",
		"lib/web3"
	],
	"main": "lib/index.js",
	"types": "lib/index.d.ts"
}