{
	"name": "@leovigna/erc20-snaphot-vault",
	"version": "0.1.3",
	"private": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/leovigna/erc20-snaphot-vault.git"
	},
	"homepage": "https://leovigna.github.io/erc20-snaphot-vault",
	"copyright": "Copyright 2020 Leo Vigna",
	"license": "MIT",
	"scripts": {
		"clean": "npm-run-all -p clean:lib clean:abi clean:types",
		"clean:lib": "rimraf lib",
		"clean:abi": "rimraf src/abi/*.json src/abi/*.json",
		"clean:types": "rimraf src/types/ethers src/types/truffle src/types/web3",
		"test": "cross-env NODE_OPTIONS=--max-old-space-size=4096 mocha lib/test",
		"lint": "eslint src --ext=ts",
		"lint:fix": "eslint src --ext=ts --fix",
		"compile": "npm-run-all compile:truffle generate-types copy compile:tsc",
		"compile:truffle": "truffle compile",
		"copy": "npm-run-all -p copy:solidity copy:ethers copy:truffle copy:web3",
		"copy:solidity": "mkdir -p lib/solidity && cp -r src/solidity lib/",
		"copy:ethers": "mkdir -p lib/types/ethers && cp -r src/types/ethers/*.d.ts lib/types/ethers",
		"copy:truffle": "mkdir -p lib/types/truffle && cp -r src/types/truffle/*.d.ts lib/types/truffle",
		"copy:web3": "mkdir -p lib/types/web3 && cp -r src/types/web3/*.d.ts lib/types/web3",
		"pretest": "npm-run-all clean compile",
		"prepublishOnly": "npm run test",
		"generate-types": "npm-run-all -p generate-types:truffle generate-types:web3 generate-types:ethers",
		"generate-types:truffle": "typechain --target=truffle-v5 --out-dir=src/types/truffle 'src/abi/*.json'",
		"generate-types:web3": "typechain --target=web3-v1 --out-dir=src/types/web3 'src/abi/*.json'",
		"generate-types:ethers": "typechain --target=ethers-v5 --out-dir=src/types/ethers 'src/abi/*.json'",
		"compile:tsc": "tsc",
		"ganache": "ganache-cli -l 8500000",
		"docs": "solidity-docgen -i src/solidity -o docs"
	},
	"devDependencies": {
		"@ethersproject/abi": "^5.4.0",
		"@ethersproject/contracts": "^5.4.0",
		"@ethersproject/providers": "^5.4.0",
		"@openzeppelin/contracts": "^4.1.0",
		"@truffle/contract": "^4.3.22",
		"@typechain/ethers-v5": "^7.0.1",
		"@typechain/hardhat": "^2.1.0",
		"@typechain/truffle-v5": "^5.0.0",
		"@typechain/web3-v1": "^3.0.0",
		"@types/chai": "^4.2.19",
		"@types/lodash": "^4.14.170",
		"@types/mocha": "^8.2.2",
		"@types/node": "^12.20.15",
		"@typescript-eslint/eslint-plugin": "^4.28.1",
		"@typescript-eslint/parser": "^4.28.1",
		"chai": "^4.3.4",
		"cross-env": "^7.0.3",
		"dotenv": "^10.0.0",
		"eslint": "^7.29.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-prettier": "^3.4.0",
		"ethers": "^5.4.0",
		"ganache-cli": "^6.12.2",
		"ganache-core": "^2.13.2",
		"husky": "^6.0.0",
		"lint-staged": "^11.0.0",
		"lodash": "^4.17.21",
		"mocha": "^9.0.1",
		"npm-run-all": "^4.1.5",
		"peer-id": "^0.14.8",
		"prettier": "^2.3.2",
		"rimraf": "^3.0.2",
		"solidity-docgen": "^0.5.13",
		"truffle": "^5.3.13",
		"truffle-assertions": "^0.9.2",
		"ts-node": "^10.0.0",
		"ts-node-dev": "^1.1.7",
		"typechain": "^5.1.1",
		"typescript": "~4.1.6",
		"web3": "^1.3.6",
		"web3-core": "^1.3.6",
		"web3-eth-contract": "^1.3.6"
	},
	"files": [
		"lib/solidity/**/!(Test*)",
		"lib/abi",
		"lib/ethers",
		"lib/truffle",
		"lib/web3"
	],
	"main": "lib/index.js",
	"types": "lib/index.d.ts"
}